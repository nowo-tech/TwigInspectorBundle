{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "./src/Resources/assets/dist",
    "rootDir": "./src/Resources/assets/src",
    "noEmit": false,
    "sourceMap": false
  },
  "include": [
    "src/Resources/assets/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/Resources/assets/dist"
  ]
}

